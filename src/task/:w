// Basic definition of a task. A task is just a unit of work that can be scheduled
// and executed by the scheduler.
use chrono::Utc as utc;

enum RunStatus {
    Scheduled(utc::DateTime),
    Running(utc::DateTime),
    Finished(utc::DateTime),
    Error(String),
}

struct TaskStatus {
    status: RunStatus,
    message: String,
}

trait Task {
    fn start(&self);
    fn get_status(&self) -> TaskStatus;
}

struct BashScriptTask {
    script: String,
    status: RunStatus,
}
